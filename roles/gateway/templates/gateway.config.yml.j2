http:
  port: 8080
admin:
  port: 9876
  hostname: localhost
apiEndpoints:
  serviceA:
    host: localhost
    paths: '/serviceA'
  serviceB:
    host: localhost
    paths: '/serviceB'
serviceEndpoints:
  serviceA:
    url: 'http://{{ hostvars['littleboy1']['ansible_host'] }}:8080'
  serviceB:
    url: 'http://{{ hostvars['fatman1']['ansible_host'] }}:9876'
policies:
  - basic-auth
  - cors
  - expression
  - key-auth
  - log
  - oauth2
  - proxy
  - rate-limit
pipelines:
  servicea:
    apiEndpoints:
      - serviceA
    policies:
      - expression: # policy name
          condition:
            name: pathExact
            path: /servicea # M책ste matcha
          action:
            jscode: 'req.url = "/hello"; ' #  채ndra request url
      - proxy:
          action:
            serviceEndpoint: serviceA
            changeOrigin: false
  serviceb:
    apiEndpoints:
      - serviceB
    policies:
      - expression:
          condition:
            name: pathExact
            path: /serviceb # M책ste matcha
          action:
            jscode: 'req.url = "/"; ' #  채ndra request url
      - proxy:
          action:
            serviceEndpoint: serviceB # Skicka request till serviceEndpoint
            changeOrigin: false
